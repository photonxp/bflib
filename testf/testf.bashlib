chk_is_link(){
    if [ ! -L "$1" ]
        then
        echo "ERR:: Link: Not a symbolic link '$1'"
        return 1
    fi
}

assert_ltarget_exists(){
    chk_is_link "$1" 
    retval=$?
    [ 0 != $retval ] && return $retval

    fpath_target=$(readlink -m "$1")
    if [ ! -e "$fpath_target" ]
        then
        echo Fail: Target File: "'$fpath_target'"
        return 64
    fi

    pass
}

